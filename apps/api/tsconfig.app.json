{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express"],
    "baseUrl": "./src",
    "paths": {
      "@shared/entities/*": ["./shared/entities/*"],
      "@shared/frameworks/*": ["./shared/frameworks/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
